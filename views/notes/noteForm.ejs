<% include ../partials/header %>

<div class="container">
    <% if(note.title === "new"){ %>
        <h1>New note</h1>
        <form action="./" method="POST">
    <% } else if(!disabled) { %>
        <h1>Edit note</h1>
        <form action="./?_method=PUT" method="POST">
    <% } %>
        <div class="form-row">
            <div class="form-group col">
                <label for="inputTitle">Title</label>
                <input type="Text" class="form-control" id="inputTitle" value="<%= note.title %>" name="note[title]" required
                <% if(disabled) { %> disabled <% } %>>
            </div>
        </div>
        <div class="form-group">
            <label for="inputBody">Body</label>
            <textarea class="form-control" id="inputBody" rows="5" name="note[body]" <% if(disabled) { %> disabled <% } %>><%= note.body %></textarea>
        </div>
        <div class="form-row">
            <div class="form-group col-md-4">
                <label for="inputState">State</label>
                <select id="inputState" class="form-control" name="note[status]" <% if(disabled) { %> disabled <% } %>>
                    <option value=false <% if(!note.status) { %> selected <% } %> >Incomplete</option>
                    <option value=true <% if(note.status) { %> selected <% } %> >Complete</option>
                </select>
            </div>
        </div>
        <% if(!disabled) { %>
        <button type="submit" class="btn btn-primary">Post</button>
        <% } %>
        <a href="/notes" class="btn btn-danger">
        <% if(disabled) { %> Go back <% } else { %> Cancel <% } %>
        </a>
    </form>
</div>

<% include ../partials/footer %>